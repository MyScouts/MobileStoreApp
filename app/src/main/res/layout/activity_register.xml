<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity"
    android:orientation="vertical"
    android:padding="10dp"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <ImageButton
            android:id="@+id/imvbtnBackRegister"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/ic_baseline_arrow_back_ios_new_24"
            android:layout_gravity="center"
            android:backgroundTint="#62687A"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:text="Tạo một tài khoản"
            android:layout_gravity="center"
            android:textSize="30dp"
            android:textColor="#162C4A"
            android:textStyle="bold"
            />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Bạn cần tạo một tài khoản để có thể truy cập vào ứng dụng"
        android:textColor="#606E83"
        android:textSize="16dp"
        android:textStyle="bold"
        />

    <EditText
        android:id="@+id/edtFullName"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="40dp"
        android:hint="Tên đầy đủ"
        android:drawableStart="@drawable/ic_account"
        android:background="@drawable/custom_edt"
        android:drawablePadding="20dp"
        android:padding="10dp"
        android:textColorHint="#606E83"
        android:textColor="#606E83"
        android:drawableTint="#62687A"
        />

    <EditText
        android:id="@+id/edtEmailRegister"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:hint="Địa chỉ email của bạn"
        android:drawableStart="@drawable/ic_email"
        android:background="@drawable/custom_edt"
        android:drawablePadding="20dp"
        android:padding="10dp"
        android:textColorHint="#606E83"
        android:textColor="#606E83"
        android:inputType="text"
        android:drawableTint="#62687A"
        />

    <EditText
        android:id="@+id/edtPassRegister"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:hint="Mật khẩu của bạn"
        android:drawableStart="@drawable/ic_lock"
        android:background="@drawable/custom_edt"
        android:drawablePadding="20dp"
        android:padding="10dp"
        android:textColorHint="#606E83"
        android:textColor="#606E83"
        android:inputType="textPassword"
        android:drawableTint="#62687A"
        />

    <Button
        android:id="@+id/btnRegister"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/custom_button"
        android:text="Đăng ký tài khoản"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        style="?android:attr/borderlessButtonStyle"
        />

</LinearLayout>