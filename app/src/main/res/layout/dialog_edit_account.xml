<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp"
    android:minWidth="1000dp"
    android:minHeight="500dp"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SỬA THÔNG TIN"
        android:gravity="center"
        android:textSize="24sp"
        android:textColor="#673AB7"
        android:textStyle="bold"
        />

    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#606E83"
        />

    <EditText
        android:id="@+id/edtEmailAccount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/custom_edt"
        android:drawablePadding="20dp"
        android:padding="10dp"
        android:textColorHint="#606E83"
        android:textColor="#606E83"
        android:drawableTint="#62687A"
        />

    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mật khẩu"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#606E83"
        />

    <EditText
        android:id="@+id/edtPasswordAccount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/custom_edt"
        android:drawablePadding="20dp"
        android:padding="10dp"
        android:textColorHint="#606E83"
        android:textColor="#606E83"
        android:drawableTint="#62687A"
        />

    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tên hiển thị"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#606E83"
        />

    <EditText
        android:id="@+id/edtDisplayNameAccount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/custom_edt"
        android:drawablePadding="20dp"
        android:padding="10dp"
        android:textColorHint="#606E83"
        android:textColor="#606E83"
        android:drawableTint="#62687A"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="30dp"
        >
        <Button
            android:id="@+id/btnUpdateAccount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#FF5722"
            android:text="CẬP NHẬT"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            />
        <Button
            android:id="@+id/btnCancelAccount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:backgroundTint="#673AB7"
            android:text="HUỶ"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            />

    </LinearLayout>



</LinearLayout>