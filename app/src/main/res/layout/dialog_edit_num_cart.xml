<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp"
    android:minWidth="1000dp"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CẬP NHẬT SỐ LƯỢNG"
        android:textSize="24sp"
        android:gravity="center"
        android:textColor="#673AB7"
        android:layout_marginBottom="20dp"
        />

    <EditText
        android:id="@+id/edtNumEditDiaLogInCart"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:hint="số lượng sản phẩm"
        android:drawableStart="@drawable/ic_numbers"
        android:background="@drawable/custom_edt"
        android:drawablePadding="20dp"
        android:padding="10dp"
        android:textColorHint="#606E83"
        android:textColor="#606E83"
        android:drawableTint="#62687A"

        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:gravity="center"
        >
        <Button
            android:id="@+id/btnUpdateNumInCart"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Cập nhật"
            android:textColor="#ffffff"
            android:backgroundTint="#FF5722"
            />
        <Button
            android:id="@+id/btnCancelEditInCart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HUỶ"
            android:textColor="#ffffff"
            android:backgroundTint="#673AB7"
            android:layout_marginLeft="10dp"
            />
    </LinearLayout>

</LinearLayout>